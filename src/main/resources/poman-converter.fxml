                  <MenuItem mnemonicParsing="false" onAction="#goToConverter" text="Конвертер систем счисления" />
              </items>
            </MenuButton>
            <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="Конвертер римских цифр" textAlignment="CENTER">
