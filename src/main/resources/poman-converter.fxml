<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@styleMenu.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="my.project.fullCalculator.GUI.RomanConverterController">
   <children>
      <HBox prefHeight="45.0" prefWidth="600.0">
         <children>
            <MenuButton fx:id="menu" mnemonicParsing="false" prefWidth="60.0">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#goBack" text="Главное меню" />
